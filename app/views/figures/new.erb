<h1>Enter info about the historical figure below:</h1>
<form method="POST" action="/figures">

	<strong>Figure Name:</strong>
	<input type="text" name="figure[name]" id="figure_name">
	<br></br>

	<strong>Choose a title:</strong>
		<%Title.all.each do |title|%>
	      <label><%= title.name %></label>
	      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>
		<%end%>
	<br></br>

	<strong><label>and/or, create a new title:</label></strong>
      <input  type="text" name="title[name]" id="new_title"></input>
  <br></br>

	<strong>Choose a landmark:</strong>
		<%Landmark.all.each do |landmark|%>
      <label><%= landmark.name %></label>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
		<%end%>
	<br></br>

	<strong><label>and/or, create a new landmark:</label></strong>
      <input  type="text" name="landmark[name]" id="new_landmark" placeholder="name"></input>
      <input type="text" name="landmark[year_completed]" placeholder="year completed"></input>
  <br></br>

	<input type="submit" value="Create New Figure">
	
</form>